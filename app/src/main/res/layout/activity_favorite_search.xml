<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_favorite"
    android:background="@color/list_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.carads.ui.myads.MyAdsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarFavorites"
        app:titleTextColor="@color/colorWhite"
        app:subtitleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/toolbar_elevation"
        >

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerFavorites"
        android:padding="@dimen/container_padding"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvInfoFavorites"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreen"
        style="@style/MyTitulTextStyle"
        android:textColor="@color/color_comment_screen"
        android:padding="@dimen/container_padding"
        android:gravity="center"
        android:text="@string/empty_favorites" />

</LinearLayout>
