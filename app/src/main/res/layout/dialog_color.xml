<android.support.v4.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/container_padding"
android:background="@color/list_screen"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/z_circle_or"
        />
    <Button
        android:id="@+id/btnOrange"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"

        android:layout_marginStart="16dp"
        android:layout_alignBottom="@+id/view1"
        android:layout_toEndOf="@+id/view1"
        android:textSize="12sp"
        android:text="@string/orange" />

    <View
        android:id="@+id/view2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignStart="@+id/view1"
        android:layout_below="@+id/view1"
        android:background="@drawable/z_circle_br"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/btnBrown"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"

        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view2"
        android:layout_alignBottom="@+id/view2"
        android:textSize="12sp"
        android:text="@string/brown" />


    <View
        android:id="@+id/view3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/z_circle_met"
        android:layout_below="@+id/view2" />


    <Button
        android:id="@+id/btnMet"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view3"
        android:layout_alignBottom="@+id/view3"
        android:textSize="12sp"
        android:text="@string/metal" />
    <View
        android:id="@+id/view4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view3"
        android:background="@drawable/z_circle_bl"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnBlue1"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view4"
        android:layout_alignBottom="@+id/view4"
        android:textSize="12sp"
        android:text="@string/blue1" />

    <View
        android:id="@+id/view6"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view4"
        android:background="@drawable/z_circle_bla"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnBlack"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view6"
        android:layout_alignBottom="@+id/view6"
        android:textSize="12sp"
        android:text="@string/black" />
    <View
        android:id="@+id/view7"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view6"
        android:background="@drawable/z_circle_zl"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAur"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view7"
        android:layout_alignBottom="@+id/view7"
        android:textSize="12sp"
        android:text="@string/aurum" />
    <View
        android:id="@+id/view8"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view7"
        android:background="@drawable/z_circle_wh"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnWhite"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view8"
        android:layout_alignBottom="@+id/view8"
        android:textSize="12sp"
        android:text="@string/white" />
    <View
        android:id="@+id/view9"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view8"
        android:background="@drawable/z_circle_yl"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnYel"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view9"
        android:layout_alignBottom="@+id/view9"
        android:textSize="12sp"
        android:text="@string/yellow" />
    <View
        android:id="@+id/view10"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view9"
        android:background="@drawable/z_circle_rd"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnRed"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view10"
        android:layout_alignBottom="@+id/view10"
        android:textSize="12sp"
        android:text="@string/red" />
    <View
        android:id="@+id/view11"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@+id/view10"
        android:background="@drawable/z_circle_gr"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnGray"
        style="@style/MyButton"
        android:layout_width="144dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/view11"
        android:layout_alignBottom="@+id/view11"
        android:textSize="12sp"
        android:text="@string/grey" />

</RelativeLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>