<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_my_ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_screen"
    android:orientation="vertical"

    tools:context="com.example.carads.ui.myads.MyAdsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMyAds"
        app:titleTextColor="@color/colorWhite"
        app:subtitleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/toolbar_elevation"
        >
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tvMyMail"
        style="@style/MyTitulTextStyle"
        android:padding="@dimen/container_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorScreen"
        android:gravity="center"
        tools:text="User" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvMyAdds"
        android:padding="@dimen/container_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tvInfoMyAds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorScreen"
        style="@style/MyTitulTextStyle"
        android:textColor="@color/color_comment_screen"
        android:padding="@dimen/container_padding"
        android:gravity="center"
        android:text="@string/empty_my_ads" />

</LinearLayout>
